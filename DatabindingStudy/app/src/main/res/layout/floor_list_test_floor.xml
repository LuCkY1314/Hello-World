<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:myRecycleViewOnly="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.util.ArrayList"/>
        <import type="com.example.chansiqing.databindingstudy.floor.listAdapter.ListTestFloorListAdapterSimple"/>

        <variable
            name="presenter"
            type="com.example.chansiqing.databindingstudy.viewModel.ListTestFloorPresenter"/>

        <variable
            name="item"
            type="ArrayList&lt;com.example.chansiqing.databindingstudy.data.ListTestFloorData>"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/softGreen"
        android:orientation="vertical">

        <com.example.chansiqing.databindingstudy.view.MyRecycleView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            data="@{presenter.prepareAdapter(recycle,item)}"/>
    </LinearLayout>
</layout>
